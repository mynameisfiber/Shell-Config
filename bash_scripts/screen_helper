function scd() {
    screen -X chdir $@
    cd $@
}

function project() {
    if [[ "$1" == "" ]]; then
        name=$( pwd | xargs basename )
    else
        name=$1
    fi
    if screen -ls | grep -P "[0-9]*\.${name}\t" &> /dev/null; then
        screen -r $name
    else
        screen -d -m -S $name
        screen -S $name -p 0 -X exec vim
        screen -S $name -X screen
        screen -r $name -p 2
    fi
}
