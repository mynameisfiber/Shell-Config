function scd() {
    cd $@
    screen -X chdir $PWD
}

function project() {
    if [[ "$1" == "" ]]; then
        name=$( pwd | xargs basename )
    else
        name=$1
    fi
    if screen -ls | grep -P "[0-9]*\.${name}\t" &> /dev/null; then
        screen -r $name
    else
        screen -AdmS $name -t vim vim
        screen -S $name -X screen -t cmd
        screen -r $name
    fi
}
