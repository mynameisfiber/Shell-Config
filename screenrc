hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][ %{=kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B}%Y-%m-%d %{W}%c %{g}]'
defscrollback 1000
startup_message off
escape ^Jj
bindkey -d ^? stuff ^H
bindkey -d ^@ stuff ^H

screen 0
select 0
exec $HOME/.bin/screen_ssh_agent
exec true
source $HOME/.ssh/screen_agent
