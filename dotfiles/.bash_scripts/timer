export TIMERPATH=$HOME/.timer

if [ ! -d "$TIMERPATH" ] ; then
    mkdir $TIMERPATH
fi

function timer_start() {
    mkdir -p "$TIMERPATH";
    date +%s > $TIMERPATH/$1
}

function timer_stop() {
    rm -i $TIMERPATH/$1
}

function timer() {
    target=$1
    if [[ -z "$target" ]]; then
        target=$( grep -R '' $TIMERPATH | sort -t: -k 2 | cut -d: -f1 )
    fi
    python - $target <<EOF
import sys
from datetime import datetime
try:
    import humanize
except ImportError:
    humanize = None
try:
    now = datetime.now()
    for path in sys.argv[1:]:
        with open(path) as fd:
            t = int(fd.read().strip())
            tname = path.rsplit('/')[-1]
            target = datetime.fromtimestamp(t)
            dt = abs(now - target)
            if target > now:
                sign = "-"
            else:
                sign = "+"
            if humanize:
                dt_s = humanize.precisedelta(
                    dt, suppress=["minutes", "seconds", "milliseconds", "microseconds"]
                )
                print(f"{tname}: T{sign} {dt_s}")
            else:
                print(f"{tname}: T{sign} {dt}")
except (ValueError, TypeError):
    pass
EOF
}

timer

_timer()
{
    local cur=${COMP_WORDS[COMP_CWORD]}
    COMPREPLY=( $(compgen -W "$( ls $TIMERPATH )" -- $cur) )
}
complete -F _timer timer_start
complete -F _timer timer_stop
complete -F _timer timer
